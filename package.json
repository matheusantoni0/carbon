{
  "name": "carbon",
  "version": "1.0.0",
  "main": "index.js",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=16.0"
  },
  "scripts": {
    "lint": "eslint --ext .ts .",
    "lint-staged": "lint-staged",
    "compile": "tsc",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "postbuild": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "start": "node dist/src/index.js",
    "dev:debug": "ts-node-dev --transpile-only --ignore-watch node_modules --respawn --inspect=0.0.0.0:4002 src/index.ts",
    "dev": "ts-node-dev --transpile-only --ignore-watch node_modules --respawn src/index.ts",
    "test": "NODE_ENV=test node --expose-gc ./node_modules/.bin/jest --maxWorkers=50%",
    "migrate": "knex migrate:latest ",
    "migrate:rollback": "knex migrate:rollback",
    "new-migrate": "knex migrate:make"
  },
  "devDependencies": {
    "@babel/cli": "7.12.1",
    "@babel/core": "7.12.3",
    "@babel/node": "7.12.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.21.0",
    "@babel/preset-env": "7.12.1",
    "@babel/preset-typescript": "7.12.1",
    "@faker-js/faker": "^7.6.0",
    "@types/body-parser": "^1.19.2",
    "@types/cls-hooked": "^4.3.3",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.14.191",
    "@types/module-alias": "^2.0.1",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "babel-plugin-module-resolver": "4.0.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-sort-class-members": "^1.16.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.1.2",
    "nock": "^13.3.0",
    "node-mocks-http": "^1.12.2",
    "prettier": "^2.8.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0"
  },
  "dependencies": {
    "body-parser": "^1.20.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "class-validator-jsonschema": "^5.0.0",
    "cls-hooked": "^4.2.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helios-opentelemetry-sdk": "^1.0.84",
    "helmet": "^6.0.1",
    "http-status-codes": "^2.2.0",
    "inversify": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "monapt": "^2.1.0",
    "node-cache": "^5.1.2",
    "objection": "^3.0.1",
    "pg": "^8.9.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.10.1",
    "routing-controllers-openapi": "^4.0.0",
    "swagger-ui-express": "^4.6.1",
    "typescript": "^4.9.5",
    "uuid": "^9.0.0",
    "zod": "^3.20.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty || true"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  }
}
